<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WishFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            android:orientation="vertical"
            >

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_margin="4dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                app:flexDirection="row"
                app:alignItems="center"
                android:background="@drawable/shape_btn_white"
                android:elevation="4dp"
                >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/location_dot_solid"
                    />

                <TextView
                    android:id="@+id/wish_txt_your_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="Ban Neon Hom, Prachinburi"
                    android:textSize="15dp"
                    android:fontFamily="@font/kanit_regular"
                    android:textColor="@color/black"
                    android:letterSpacing="0.02"
                    />

            </com.google.android.flexbox.FlexboxLayout>

            <!-- Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- Container Your Wish -->
                <LinearLayout
                    android:id="@+id/wish_container_your_wish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:text="@string/title_your_wish_list"
                        android:textSize="16dp"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/kanit_regular"
                        android:layout_marginBottom="16dp"
                        />

                    <!-- Your Wish Item -->
                    <ListView
                        android:id="@+id/wish_items_your_wish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="4dp"
                        />

                    <!-- Section line -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.6dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@color/section_line"
                        />

                </LinearLayout>

                <!-- Container Wish -->
                <LinearLayout
                    android:id="@+id/wish_container_wish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:text="@string/title_wish_list"
                        android:textSize="16dp"
                        android:textColor="@color/secondary"
                        android:fontFamily="@font/kanit_regular"
                        android:layout_marginBottom="16dp"
                        />

                    <!-- Your Wish Item -->
                    <ListView
                        android:id="@+id/wish_items_wish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="4dp"
                        />

                </LinearLayout>

                <!-- Gap -->
                <LinearLayout
                    android:layout_marginVertical="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>