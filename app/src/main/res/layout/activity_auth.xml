<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity"
    android:background="@color/background"
>


    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
        >

            <TextView
                android:text="i"
                android:textSize="48dp"
                android:textColor="@color/firstLetterTextLogo"
                android:fontFamily="@font/permanent_marker_regular"
                android:letterSpacing="0.06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Want"
                android:textSize="48dp"
                android:textColor="@color/primary"
                android:fontFamily="@font/permanent_marker_regular"
                android:letterSpacing="0.06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/banner_auth"
        />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/message_auth_screen"
            android:textAlignment="center"
            android:fontFamily="@font/kanit_regular"
            android:textColor="@color/message_banner"
            android:textSize="12dp"
            android:letterSpacing="0.06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />


        <com.google.android.flexbox.FlexboxLayout
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="24dp"
            app:flexDirection="column"
            app:justifyContent="space_between"
            android:layout_width="match_parent"
            android:layout_height="100dp"
        >

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/auth_btnSignInGoogle"
                android:paddingHorizontal="16dp"
                app:flexDirection="row"
                app:alignItems="center"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="44dp"
            >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google_logo"
                    />

                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with google"
                />

            </com.google.android.flexbox.FlexboxLayout>


            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/auth_btnSignInLine"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                app:flexDirection="row"
                app:alignItems="center"
                android:background="@color/bg_logo_line"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/line_logo"
                    />

                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Line"
                    android:textColor="@color/white"
                />

            </com.google.android.flexbox.FlexboxLayout>


        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>


</LinearLayout>