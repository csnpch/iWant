<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="82dp"
                android:text="PROFILE"
                android:fontFamily="@font/kanit_semi_bold"
                android:textSize="24dp"
                android:textColor="@color/primary"
                android:letterSpacing="0.04"
                />


            <!-- Gap -->
            <LinearLayout
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:text="Fullname"
                    android:fontFamily="@font/kanit_regular"
                    android:textColor="@color/secondary"
                    android:letterSpacing="0.04"
                    />

                <EditText
                    android:id="@+id/profile_edt_fullname"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="6dp"
                    android:elevation="4dp"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/shape_input_text"
                    android:textSize="16dp"
                    android:fontFamily="@font/kanit_regular"
                    android:hint="ประหยัด จันทร์อังคาร"
                    android:textColor="@color/text_gray"
                    android:letterSpacing="0.06"
                    android:singleLine="true"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:fontFamily="@font/kanit_regular"
                    android:textColor="@color/secondary"
                    android:letterSpacing="0.04"
                    />

                <EditText
                    android:id="@+id/profile_edt_phone"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="6dp"
                    android:elevation="4dp"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/shape_input_text"
                    android:textSize="16dp"
                    android:fontFamily="@font/kanit_regular"
                    android:hint="@string/hint_phone"
                    android:textColor="@color/text_gray"
                    android:letterSpacing="0.06"
                    android:inputType="numberSigned"
                    android:singleLine="true"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:fontFamily="@font/kanit_regular"
                    android:textColor="@color/secondary"
                    android:letterSpacing="0.04"
                    />

                <EditText
                    android:id="@+id/profile_edt_email"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="6dp"
                    android:elevation="4dp"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/shape_input_text"
                    android:textSize="16dp"
                    android:fontFamily="@font/kanit_regular"
                    android:hint="payat.chankarn@hotmailcom"
                    android:textColor="@color/text_gray"
                    android:letterSpacing="0.06"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/profile_area_btn_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible"
                >

                <LinearLayout
                    android:id="@+id/profile_btn_edit"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/shape_btn_warning"
                    android:gravity="center"
                    android:elevation="4dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDIT"
                        android:fontFamily="@font/kanit_regular"
                        android:textColor="@color/white"
                        android:letterSpacing="0.04"
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/profile_area_btn_onEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                >

                <LinearLayout
                    android:id="@+id/profile_btn_save"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/shape_btn_primary"
                    android:gravity="center"
                    android:elevation="4dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAVE"
                        android:fontFamily="@font/kanit_regular"
                        android:textColor="@color/white"
                        android:letterSpacing="0.04"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_btn_cancel"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/shape_btn_nothing"
                    android:gravity="center"
                    android:elevation="4dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CANCEL"
                        android:fontFamily="@font/kanit_regular"
                        android:textColor="@color/white"
                        android:letterSpacing="0.04"
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/profile_area_signout"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/section"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_logo_signIn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/google_logo"
                        />

                    <TextView
                        android:id="@+id/profile_text_signIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/kanit_regular"
                        android:textSize="16dp"
                        android:text="You sign in with Google"
                        />

                    <ImageView
                        android:id="@+id/profile_btn_signOut"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/arrow_right_from_bracket_solid"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>



    </ScrollView>


</FrameLayout>